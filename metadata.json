import React from 'react';
import ReactDOM from 'react-dom/client';
import App from './App';

// Sistema de detección de errores global (Pantalla de la Muerte)
window.onerror = function(message, source, lineno, colno, error) {
  const overlay = document.getElementById('error-overlay');
  if (overlay) {
    overlay.style.display = 'block';
    overlay.innerHTML = `
      <h1 style="font-size: 24px; font-weight: bold; margin-bottom: 10px;">Error Crítico de Carga</h1>
      <p>La aplicación no pudo iniciar. Por favor comparte este mensaje:</p>
      <pre style="background: #f0f0f0; padding: 10px; border-radius: 5px; overflow: auto;">${message}\n\nEn: ${source}:${lineno}</pre>
    `;
  }
  console.error("Error global detectado:", error);
};

console.log("Iniciando aplicación React...");

const rootElement = document.getElementById('root');
if (!rootElement) {
  throw new Error("Could not find root element to mount to");
}

try {
  const root = ReactDOM.createRoot(rootElement);
  root.render(
    <React.StrictMode>
      <App />
    </React.StrictMode>
  );
  console.log("Aplicación montada con éxito.");
} catch (err) {
  console.error("Error al montar React:", err);
}
